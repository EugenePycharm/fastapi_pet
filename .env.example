# =============================================================================
# FastAPI Gemini Clone - Environment Configuration
# =============================================================================
# Для production замените значения на реальные.
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL + asyncpg)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fastapi_gemini
DB_USER=postgres
DB_PASSWORD=postgres

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=FastAPI Gemini Clone
DEBUG=true

# -----------------------------------------------------------------------------
# Security Settings (JWT & Sessions)
# -----------------------------------------------------------------------------
# Сгенерируйте безопасный ключ: openssl rand -hex 32
SECRET_KEY=super-secret-key-for-development-only-change-in-production

# Время жизни токенов
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Google Gemini API (если используется)
# -----------------------------------------------------------------------------
API_KEY=your-gemini-api-key-here
